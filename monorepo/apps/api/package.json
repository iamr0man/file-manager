{
  "name": "@file-manager/api",
  "version": "1.0.0",
  "private": true,
  "description": "Backend API for file manager platform",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "sync": "ts-node src/jobs/run-sync.ts",
    "type-check": "tsc --noEmit",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --config jest.config.js --watch",
    "lint": "eslint src/**/*.ts",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.0.0",
    "@aws-sdk/s3-request-presigner": "^3.0.0",
    "@fastify/cors": "^8.0.0",
    "@fastify/multipart": "^7.0.0",
    "@file-manager/config": "file:../../packages/config",
    "@file-manager/types": "file:../../packages/types",
    "@prisma/client": "^5.7.0",
    "@trpc/server": "^10.0.0",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "cron": "^3.1.6",
    "fastify": "^4.0.0",
    "kafkajs": "^2.0.0",
    "pino": "^8.0.0",
    "pino-pretty": "^10.0.0",
    "uuid": "^11.1.0",
    "ws": "^8.18.3",
    "zod": "^3.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.0.0",
    "@types/cron": "^2.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "jest": "^29.0.0",
    "jest-environment-node": "^29.0.0",
    "prisma": "^5.7.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.0"
  }
}
