{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug API",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/monorepo/apps/api",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "skipFiles": ["<node_internals>/**"],
      "outFiles": ["${workspaceFolder}/monorepo/apps/api/dist/**/*.js"],
      "console": "integratedTerminal",
      "sourceMaps": true
    },
    {
      "name": "Debug Web",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/monorepo/apps/web",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "sourceMaps": true
    },
    {
      "name": "Debug All",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/monorepo",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "sourceMaps": true
    }
  ]
} 